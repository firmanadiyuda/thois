<% content_for :title, "Editing AI theme" %>

  <div class="grid grid-cols-2">
    <div class="">
      <div class="text-4xl"><b>Edit <%= @ai_theme.name %></b></div>
    </div>
    <div class="text-right">
    </div>
  </div>

  <div class="w-full text-neutral-500 italic">
    <%= link_to "Events", events_path %> / <%= link_to @event.name, @event %> / <%= link_to "AI Themes", event_ai_photobooth_ai_themes_path(@event, @event.photobooth) %> / Edit AI Theme
  </div>

<%= render "form", ai_theme: @ai_theme, event: @event, ai_photobooth: @event.ai_photobooth, submit_text: "Update" %>


<div class="mt-2">
  <%= button_to "Delete", event_ai_photobooth_ai_theme_path(), method: :delete, class:'bg-red-800 p-3 rounded-xl text-white' %>
</div>