<p style="color: green"><%= notice %></p>

<% content_for :title, "AI Themes" %>

<div id="ai_themes" class="w-full">

  <div class="grid grid-cols-2">
    <div class="">
      <div class="text-4xl"><b>AI Themes</b></div>
    </div>
    <div class="text-right">
      <%= render(LinktoComponent.new(path: new_event_ai_photobooth_ai_theme_path)) do %> New Themes <% end %>
    </div>
  </div>

    <div class="w-full text-neutral-500 italic">
    <%= link_to "Events", events_path %> / <%= link_to @event.name, @event %> / AI Themes
  </div>

  <div class="py-5 my-5">
    <table id="all_ai_themes" class="w-full">
      <thead>
        <tr>
          <th class="bg-black/80 border-r border-neutral-400 text-white text-left p-2 rounded-tl-xl w-36 text-sm"></th>
          <th class="bg-black/80 border-r border-neutral-400 text-white text-left p-2 text-sm">NAME</th>
          <th class="bg-black/80 text-white py-2 px-5 rounded-tr-xl text-sm text-right">ACTION</th>
        </tr>
      </thead>
      <tbody>
        <%= turbo_stream_from :ai_themes_list %>
        <% @ai_themes.each do |ai_theme| %>
          <%= render partial:"ai_themes/ai_theme", locals: { ai_theme: ai_theme, event: @event } %>
        <% end %>
      </tbody>
    </table>
  </div>

</div>
