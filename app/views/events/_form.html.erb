<div class="mt-5">
<%= form_with(model: event) do |form| %>
  <% if event.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(event.errors.count, "error") %> prohibited this event from being saved:</h2>

      <ul>
        <% event.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid gap-5">
    <%= render(InputComponent.new(form: form, label: "Name", data: "name"))%>
    <%= render(TextAreaComponent.new(form: form, label: "Description", data: "description"))%>
  </div>

  <div class="mt-5">
    <%= form.submit class:'bg-neutral-900 p-3 rounded-xl text-white cursor-pointer' %>
  </div>
<% end %>
</div>