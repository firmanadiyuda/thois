<% content_for :title, "Editing event" %>

<div class="grid grid-cols-2">
  <div class="">
    <div class="text-4xl"><b>Edit <%= @event.name %></b></div>
  </div>
  <div class="text-right">
    <%= render(ButtontoComponent.new(path: @event, method: "delete", theme: "danger", size: "md", confirm: "Are you sure?")) do %>
      <i class="ri-delete-bin-line"></i> Delete
    <% end %>
  </div>
</div>

<div class="w-full text-neutral-500 italic">
  <%= link_to "Events", events_path %> / <%= link_to @event.name, @event %> / Edit event
</div>

<%= render "form", event: @event, submit_text: "Update" %>