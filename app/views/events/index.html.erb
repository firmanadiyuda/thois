<p style="color: green"><%= notice %></p>

<% content_for :title, "Events" %>


<div id="events" class="w-full">

  <div class="grid grid-cols-2">
    <div class="">
      <div class="text-4xl"><b>Events</b></div>
    </div>
    <div class="text-right">
      <%= render(LinktoComponent.new(path: new_event_path)) do %> New event <% end %>
    </div>
  </div>

  <% @events.each do |event| %>

  <%= link_to event do %>
    <div class="border-2 p-5 rounded-xl my-5">
      <div class="grid grid-cols-2">
        
        <div>
          <b><%= event.name %></b>
          <br>
          <%= event.description %>
        </div>

        <div class="text-right">
          <p>
          </p>
        </div>

      </div>
    </div>
  <% end %>

    
  <% end %>
</div>

